<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ basics.name }} - Resume</title>
  <link rel="stylesheet" href="../src/themes/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

  <header>
    <h1>{{ basics.name }}</h1>
    <p><strong>{{ basics.label }}</strong></p>
    <p>
      <i class="fas fa-envelope"></i>
      Email: <a href="mailto:{{ basics.email }}">{{ basics.email }}</a> &nbsp; | &nbsp;
      <i class="fas fa-phone"></i>
      Phone: {{ basics.phone }}
    </p>
    <p>
      <i class="fas fa-globe"></i>
      Website: <a href="{{ basics.website }}" target="_blank">{{ basics.website }}</a>
    </p>
    <p>{{ basics.summary }}</p>
  </header>

  <section>
    <h2>Work Experience</h2>
    {% for job in work %}
    <div>
      <h3>{{ job.position }} — <a href="{{ job.website or '#' }}" target="_blank">{{ job.company }}</a></h3>
      <p><em>{{ job.startDate }} - {{ job.endDate or 'Present' }}</em></p>
      <p>{{ job.summary }}</p>
      {% if job.highlights %}
      <ul>
        {% for highlight in job.highlights %}
        <li>{{ highlight }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  <section>
    <h2>Education</h2>
    {% for edu in education %}
    <div>
      <h3>{{ edu.degree }} in {{ edu.area }}</h3>
      <p>{{ edu.institution }} | <em>{{ edu.startDate }} - {{ edu.endDate }}</em></p>
      {% if edu.gpa %}
      <p>GPA: {{ edu.gpa }}</p>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  <section>
    <h2>Skills</h2>
    {% for skill_group in skills %}
    <div>
      <h3>{{ skill_group.name }}</h3>
      <p>{{ skill_group.keywords | join(', ') }}</p>
    </div>
    {% endfor %}
  </section>

  <section>
    <h2>Projects</h2>
    {% for project in projects %}
    <div>
      <h3><a href="{{ project.url }}" target="_blank">{{ project.name }}</a></h3>
      <p>{{ project.description }}</p>
    </div>
    {% endfor %}
  </section>

  <section>
    <h2>Languages</h2>
    <ul>
      {% for lang in languages %}
      <li>{{ lang.language }} — {{ lang.fluency }}</li>
      {% endfor %}
    </ul>
  </section>

</body>
</html>
