<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ basics.name }} - Resume</title>
  <link rel="stylesheet" href="../src/themes/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

<header>
  <h1>{{ basics.name }}</h1>

  <p class="contact-info">
    <i class="fas fa-envelope"></i>
    <a href="mailto:{{ basics.email }}">{{ basics.email }}</a>
    &nbsp; | &nbsp;
    <i class="fas fa-phone"></i>
    {{ basics.phone }}
    &nbsp; | &nbsp;
    <i class="fas fa-location-dot"></i>
    {{ basics.address }}
  </p>

  <p class="social-links">
    <i class="fas fa-globe"></i>
    <a href="{{ basics.website }}" target="_blank">{{ basics.website }}</a>
    {% if basics.github %}
    &nbsp; | &nbsp;
    <i class="fab fa-github"></i>
    <a href="https://{{ basics.github }}" target="_blank">{{ basics.github }}</a>
    {% endif %}
    {% if basics.linkedin %}
    &nbsp; | &nbsp;
    <i class="fab fa-linkedin"></i>
    <a href="https://{{ basics.linkedin }}" target="_blank">{{ basics.linkedin }}</a>
    {% endif %}
  </p>

  <p class="summary">{{ basics.summary }}</p>
</header>


  <section>
  <div class="section-divider">
    <h2>Work Experience</h2>
    <div class="line"></div>
    </div>
    {% for job in work %}
    <div>
      <h3>{{ job.position }} — <a href="{{ job.website or '#' }}" target="_blank">{{ job.company }}</a>
      <span class="tenure"><em>{{ job.startDate }} - {{ job.endDate or 'Present' }}</em></span>
      </h3>
      <p>{{ job.summary }}</p>
      {% if job.highlights %}
      <ul>
        {% for highlight in job.highlights %}
        <li>{{ highlight }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  <section>
  <div class="section-divider">
    <h2>Education</h2>
    <div class="line"></div>
    </div>
    {% for edu in education %}
    <div>
      <h3>{{ edu.degree }} in {{ edu.area }}
      <span class="tenure"><em>{{ edu.startDate }} - {{ edu.endDate }}</em></span>
      </h3>
      <p>{{ edu.institution }}</p>
      {% if edu.gpa %}
      <p>GPA: {{ edu.gpa }}</p>
      {% endif %}
    </div>
    {% endfor %}
  </section>

  <section>
  <div class="section-divider">
    <h2>Skills</h2>
    <div class="line"></div>
    </div>
    {% for skill_group in skills %}
    <div>
      <h3>{{ skill_group.name }}</h3>
      <p>{{ skill_group.keywords | join(', ') }}</p>
    </div>
    {% endfor %}
  </section>

  <section>
  <div class="section-divider">
    <h2>Projects</h2>
    <div class="line"></div>
    </div>
    {% for project in projects %}
    <div>
      <h3><a href="{{ project.url }}" target="_blank">{{ project.name }}</a></h3>
      <p>{{ project.description }}</p>
    </div>
    {% endfor %}
  </section>

  <section>
  <div class="section-divider">
    <h2>Languages</h2>
    <div class="line"></div>
    </div>
    <ul>
      {% for lang in languages %}
      <li>{{ lang.language }} — {{ lang.fluency }}</li>
      {% endfor %}
    </ul>
  </section>

</body>
</html>
